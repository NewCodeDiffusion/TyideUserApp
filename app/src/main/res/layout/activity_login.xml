<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
    </data>
    <FrameLayout
        android:id="@+id/fraimLogin"
        android:background="@color/bg_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login.LoginActivity">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:foregroundGravity="center"
                    android:layout_gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/logotrue"/>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:outlineSpotShadowColor="@color/dark_gray"
                    app:cardCornerRadius="12dp"
                    android:layout_centerInParent="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:background="@drawable/gallery_r"
                            android:padding="15dp"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:id="@+id/login"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:textSize="25dp"
                                android:text="Login"/>


                            <TextView
                                android:id="@+id/loginno"
                                android:layout_width="wrap_content"
                                android:textColor="@color/white"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:textStyle="italic"
                                android:text="with Your Mobile No and Password"/>




                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:text="Mobile NO"
                            android:textColor="@color/dark_gray"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/et_enterEmailPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="30dp"
                            android:background="@color/transparent"
                            android:hint="Enter Mobile No"
                            android:inputType="number"
                            android:maxLength="10"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="15.8dp"
                            android:layout_marginRight="30dp"
                            android:background="@color/smoke_gray" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp"
                            android:text="Password"
                            android:textColor="@color/smoke_gray"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/et_userPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="30dp"
                            android:background="@color/transparent"
                            android:hint="Enter Password"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="15.8dp"
                            android:layout_marginRight="30dp"
                            android:background="@color/smoke_gray" />
                        <TextView


                            android:layout_marginTop="10dp"
                            android:layout_marginRight="16.7dp"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:id="@+id/tv_forgotPassword"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/tv_newUser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Forgot Password"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/low_orange"/>


                        <Button
                            android:id="@+id/btn_login"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30.2dp"
                            app:backgroundTint="@null"
                            android:layout_marginBottom="15dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/gradient_orange"
                            android:text="Next"
                            android:textColor="@color/white"
                            android:textSize="16sp" />


                        <RelativeLayout
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="16dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_newUser"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="For New User ?"
                                android:textStyle="italic"
                                android:textSize="12sp"
                                android:textColor="@color/red"/>
                            <TextView
                                android:id="@+id/tv_signUp"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/tv_newUser"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SignUp"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:textColor="@color/low_orange"/>

                        </RelativeLayout>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>





            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </FrameLayout>

</layout>
